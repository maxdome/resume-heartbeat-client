<!DOCTYPE html>
<html ng-app="app" ng-strict-di>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Maxdome Resume Heartbeat</title>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/{{ bower.bootstrap }}/css/bootstrap.min.css" rel="stylesheet">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/{{ bower.bootstrap }}/css/bootstrap-theme.min.css" rel="stylesheet">

    {% if env == 'development' %}
        <link href="/css/app.css" rel="stylesheet">
    {% else %}
        <link href="/css/app.min.css" rel="stylesheet">
    {% endif %}
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#/">Maxdome Resume Heartbeat</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav"></ul>
        </div>
    </div>
</nav>

<div class="container" ng-controller="AppCtrl">
    <form class="form-horizontal" ng-submit="token()">
        <legend>Create User/Asset Token</legend>
        <div class="form-group">
            <label for="inputUserId" class="col-sm-2 control-label">User ID</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputUserId" ng-model="user.id">
            </div>
        </div>
        <div class="form-group">
            <label for="inputAsset" class="col-sm-2 control-label">Asset ID</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputAssetId" ng-model="asset.id">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Create</button>
            </div>
        </div>
    </form>
    <form class="form-horizontal" ng-submit="store()">
        <legend>Store Playback Position</legend>
        <div class="form-group">
            <label for="inputToken" class="col-sm-2 control-label">Token</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputToken" ng-model="token.token">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPlaybackPosition" class="col-sm-2 control-label">Playback Position</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputPlaybackPosition" ng-model="asset.playbackPosition">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Store</button>
            </div>
        </div>
    </form>
    <form class="form-horizontal" ng-submit="get()">
        <legend>Get Playback Position</legend>
        <div class="form-group">
            <label for="inputUserId" class="col-sm-2 control-label">User ID</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputUserId" ng-model="user.id">
            </div>
        </div>
        <div class="form-group">
            <label for="inputAsset" class="col-sm-2 control-label">Asset ID</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputAssetId" ng-model="asset.id">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Get</button>
            </div>
        </div>
    </form>
</div>

<footer>
    <nav class="navbar navbar-default">
        <div class="container">
            <ul class="nav navbar-nav navbar-right">
                <li><a data-toggle="modal" data-target="#imprintModal">Imprint</a></li>
            </ul>
        </div>
    </nav>
</footer>

<div class="modal fade" id="imprintModal" tabindex="-1" role="dialog" aria-labelledby="imprintLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="imprintLabel">Imprint</h4>
            </div>
            <div class="modal-body">
                Maxdome Resume Heartbeat
            </div>
            <div class="modal-footer">
                <a href="{{ package.homepage }}" target="_blank">{{ package.name }}</a> {{ package.version }},
                &copy; maxdome GmbH 2015
            </div>
        </div>
    </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/{{ bower.jquery }}/jquery.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/{{ bower.bootstrap }}/js/bootstrap.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/angularjs/{{ bower.angular }}/angular.min.js"></script>

{% if env == 'development' %}
    <script src="/js/app.js"></script>
{% else %}
    <script src="/js/app.min.js"></script>
{% endif %}
</body>
</html>
